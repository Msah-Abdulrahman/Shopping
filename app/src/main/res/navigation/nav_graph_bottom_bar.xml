<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_bottom_bar"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.msah.mobilepos.main.product.ProductFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>


    <fragment
        android:id="@+id/scanFragment"
        android:name="com.msah.mobilepos.main.scan.ScanFragment"
        android:label="ScanFragment" >
        <action
            android:id="@+id/action_scanFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.msah.mobilepos.main.profile.ProfileFragment"
        android:label="ProfileFragment" />

    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.msah.mobilepos.productdetail.ProductDetailsFragment"
        android:label="ProductDetailsFragment" />
</navigation>