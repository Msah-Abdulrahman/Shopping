<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <stroke
        android:width="3dp"
        android:color="#89858A" />

    <!-- Background -->
    <solid
        android:color="#F8F7F5" />

    <!-- Rounded corners (optional) -->
    <corners
        android:radius="10dp" />

    <!-- Padding (optional) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
